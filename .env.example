OPENAI_API_KEY=sk-your-openai-key

# Required for delegation: Anthropic API key (for claude-3-5-sonnet model)
ANTHROPIC_API_KEY=sk-ant-your-anthropic-key

# Optional: Claude model to use for active tasks (default: claude-sonnet-4-6)
# CLANKER_CLAUDE_ACTIVE_MODEL=claude-sonnet-4-6

# Optional Discord integration (runs alongside local REPL)
DISCORD_BOT_TOKEN=your_discord_bot_token

# Optional hardening: comma-separated Discord snowflake IDs.
# If set, only these users/channels can talk to the bot.
DISCORD_ALLOWED_USER_IDS=123456789012345678
DISCORD_ALLOWED_CHANNEL_IDS=345678901234567890

# UNSAFE: if set to 1/true/yes/on, Discord messages can run write/delegate actions.
DISCORD_UNSAFE_ENABLE_WRITES=0

# Transport selection: repl, discord, or both separated by commas.
CLANKER_TRANSPORTS=repl,discord

# If disabled, delegate actions return a blocked response. Requires ANTHROPIC_API_KEY.
ENABLE_CLAUDE_DELEGATE=0

# If enabled, chat requests are submitted as async jobs with status updates.
# Direct command/edit execution paths are disabled while this mode is on.
CLANKER_ENABLE_JOB_ORCHESTRATION=1

# Optional shell binary override for command execution (default: bash).
# SHELL_BIN=/bin/bash

# Optional runtime tuning overrides (defaults shown)
# CLANKER_OPENAI_MODEL=gpt-4o
# CLANKER_OPENAI_MAX_TOKENS=1024
# CLANKER_MAX_HISTORY=50
# CLANKER_MAX_SESSIONS=100
# CLANKER_MAX_USER_INPUT=8000
# CLANKER_MAX_COMMAND_LENGTH=10000
# CLANKER_MAX_OUTPUT_BYTES=524288
# CLANKER_QUEUE_MAX_CONCURRENT_JOBS=10
# CLANKER_DELEGATE_PROPOSAL_TTL_MS=900000
# CLANKER_DELEGATE_DIFF_PREVIEW_MAX_LINES=80
# CLANKER_DELEGATE_DIFF_PREVIEW_MAX_CHARS=3000
# CLANKER_DELEGATE_FILE_DIFF_MAX_LINES=120
# CLANKER_DELEGATE_FILE_DIFF_MAX_CHARS=1400
# CLANKER_LOGGER_MAX_OUT=500
# CLANKER_LOGGER_MAX_CMD=200
# CLANKER_LOGGER_MAX_MSG=300
